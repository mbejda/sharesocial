<div id="files" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Image Selector</h3>
    </div>
    <div class="modal-body">
        <select class="imagepicker" data-bind="foreach : images">
            <option data-bind="attr :{'data-img-src': 'coupons/'+$data, value : $data}"></option>
        </select>
    </div>
    <div class="modal-footer">
        <input id="fileBox" type="file" />
        <button class="btn delete-coupon-image"> Delete </button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>