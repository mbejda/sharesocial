<!---ALL COuPONS-->
<div class="row all-coupons">
<div class="span12">
<h4>All Coupons</h4>
</div>

<ul class="coupons unstyled" data-bind="foreach : {data: coupons.allCoupons(), afterAdd: test,beforeRemove:test2 }">
<!-- ko if: $data.store_name  -->
<li class=" slideUp span4 overflow-hidden coupon ">
<div class="name">
<a href="#" data-bind="click: $parent.coupons.view"><span data-bind="text:store_name"></span></a>
</div>
<!-- ko if: $data.image -->
<img  style="width:300px; height:300px" data-bind="attr: {src: 'coupons/'+$data.image}" />
<!-- /ko -->
<!-- ko ifnot: $data.image -->


<img  src="http://carolinastylehairsalon.com/wp-content/themes/carolinastylehairsalon/images/hair-salon-greer-sc-coupon-icon.png"/>
<!-- /ko -->

<div class="caption">

<a href="#" class="delete-coupon btn btn-inverse" data-bind="click: $parent.coupons.delete">Delete</a>
<a href="#" class="share-coupon btn btn-inverse" data-bind="click: $parent.coupons.share">Share</a>
<a href="#" class="btn btn-inverse" data-bind="click: $parent.coupons.view">View</a>

</div>
</li>
<!-- /ko -->


</ul>
</div>
<!-- END aLL COUPONS-->
